<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
        <%if post["user_id"]%>
          <%postuser=User.find_by({"id"=>post["user_id"]})%>
          <%=postuser["first_name"]%> <%=postuser["last_name"]%>
        <%else%>
          anonymous
        <%end%>
      </h4>
      <img src="<%= post["image"] %>" class="img-fluid w-full">
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>